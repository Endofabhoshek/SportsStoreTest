@model  IEnumerable<SportsStore.Domain.Entities.Product>
@{
    ViewBag.Title = "Products";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
</head>
<body>
    <div> 
        @foreach (var item in Model)
        {
            <div class="item">
                <h3>@item.Name</h3>
                @item.Description
                <h4>@item.Price.ToString("c")</h4>
            </div>
        }
    </div>
</body>
</html>
